@using Data;
@using Services;

<MudDialog>
    <DialogContent>
        <MudForm @ref="form" @bind-IsValid="@success">
            <MudTextField @bind-Value="NameText" Label="@LD.Name"
                          Immediate="true"
                          Variant="Variant.Text" MaxLength="10" Counter="10"
                          Required="true" RequiredError="@LD.RequiredError"></MudTextField>
        </MudForm>
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="Cancel">@LD.Cancel</MudButton>
        <MudButton Color="Color.Primary" OnClick="Submit" Disabled="@(!success)">@LD.OK</MudButton>
    </DialogActions>
</MudDialog>


@code {
    [CascadingParameter] MudDialogInstance MudDialog { get; set; }
    private MudForm form;
    private bool success = false;

    void Submit()
    {
        if (!success)
        {
            return;
        }

        Kind item = new() { Name = NameText };
        KindService.InsertKind(item);

        MudDialog.Close(DialogResult.Ok(true));
    }
    void Cancel() => MudDialog.Cancel();

    string NameText = "";
}
